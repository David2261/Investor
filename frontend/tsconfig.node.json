{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["@testing-library/jest-dom"]
  },
  "exclude": [
    "./src/__tests__/**/*",
    "./src/__mocks__/**/*",
    "./src/api/**/*",
    "./config/*",
    "node_modules"
  ],
  "include": ["vite.config.ts"]
}