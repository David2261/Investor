{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["*"],
      "*": ["./*", "./src/*"]
    },
    "baseUrl": "./src",
    "types": ["@testing-library/jest-dom"]
  },
  "exclude": [
    "./src/__tests__",
    "./src/__mocks__",
    "node_modules"
  ],
  "include": ["vite.config.ts"]
}
